{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HACS Configuration Schema",
  "description": "JSON schema for hacs.json configuration file",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the integration"
    },
    "domains": {
      "type": "array",
      "description": "List of Home Assistant domains",
      "items": {
        "type": "string"
      }
    },
    "documentation": {
      "type": "string",
      "description": "URL to documentation",
      "format": "uri"
    },
    "requirements": {
      "type": "array",
      "description": "Python requirements",
      "items": {
        "type": "string"
      }
    },
    "version": {
      "type": "string",
      "description": "Current version",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "homeassistant": {
      "type": "string",
      "description": "Minimum Home Assistant version",
      "pattern": "^[0-9]+\\.[0-9]+(\\.[0-9]+)?$"
    },
    "iot_class": {
      "type": "string",
      "enum": ["local_polling", "local_push", "cloud_polling", "cloud_push"],
      "description": "IoT class"
    },
    "render_readme": {
      "type": "boolean",
      "description": "Whether to render README"
    }
  },
  "required": ["name"],
  "additionalProperties": false
}
